{
  "name": "ReadAble",
  "description": "Extension intended to improve readability and focus capabilities on websites",
  "version": "1.2",
  "manifest_version": 3,
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "activeTab",
    "tabs",
    "scripting",
    "<all_urls>",
    "storage"
  ],
  "host_permissions":["https://*/"],
  "icons": {
    "128": "logo.png"
  },
  "action": {
    "default_popup": "popup.html"
  }

}